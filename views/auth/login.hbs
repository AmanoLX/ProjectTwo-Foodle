<section id="signup-container">
  <nav class="navbar navbar-expand-lg navbar-light bg-light">
    <ul class="navbar-nav mr-auto">
      <a class="navbar-brand" href="#">Logo</a>
      <li class="nav-item active">
        <a class="nav-link disabled" href="/">Foodle</a>
      </li>
  </nav>
  <div class="auth--card" style="width: 18rem;">
    <div class="auth--card-title">Log in!</div>
    <div>
      {{#if errorMessage}}
        <div class="error">
          <p>{{errorMessage}}</p>
        </div>
      {{/if}}
      <form action="/login" method="POST">
        <div class="form-group">
          <label for="email">Email address</label>
          <input type="email" class="form-control" id="login-email" name="email">
        </div>
        <div class="form-group">
          <label for="password">Password</label>
          <input type="password" class="form-control" name="password" id="login-password">
        </div>
        <button type="submit" class="btn btn-warning auth--btn">Log in</button>
      </form>
    </div>
    <div>
      <span class="logo-link-container">
        Not a user yet? Sign up <a class="login-link" href="/signup">here</a>      
      </span>
    </div>
  </div>
</section>
