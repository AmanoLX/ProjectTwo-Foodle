<div class="signup-container">
  <div class="card" style="width: 18rem;">
    <div class="card-title">Log in!</div>
    <div>
      <form action="/signup" method="POST">
        <div class="form-group">
          <label for="exampleInputEmail1">Email address</label>
          <input type="email" class="form-control" id="signup-email" name="email" aria-describedby="emailHelp">
        </div>
        <div class="form-group">
          <label for="exampleInputPassword1">Password</label>
          <input type="password" class="form-control" name="password" id="signup-password">
        </div>
        <button type="submit" class="btn btn-warning">Submit</button>
      </form>
    </div>
    <div>
      <span class="logo-link-container">
        Not a user yet? Sign up <a class="login-link" href="/signup">here</a>
      </span>
    </div>
  </div>
</div>
