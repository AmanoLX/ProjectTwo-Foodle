<script>
  const formContainer = document.getElementById('add-recipe-form');
  const ingredientContainer = document.getElementById('ingredients-container');
  const ingredientInput = document.getElementById('ingredients');
  let ingredients = [];

  const createBadge = (ingredient) => {
    const badge = document.createElement('span');
    badge.classList.add("badge", "badge-pill", "badge-warning");
    badge.innerHTML = ingredient;

    if (ingredient !== '') {
      ingredients.push(ingredient);
    }

    ingredientInput.value = '';
    ingredientContainer.appendChild(badge);
  }

  window.addEventListener('load', () => {
    const oldIngredients = ingredientInput.value.split(',');
    oldIngredients.forEach((ingredient) => createBadge(ingredient));
  })

  ingredientInput.addEventListener('keydown', (event) => {
    if (event.keyCode === 13) {
        event.preventDefault();

        const ingredient = ingredientInput.value;
        createBadge(ingredient);
    }
  })

  formContainer.addEventListener('submit', (e) => {
      e.preventDefault();
      formContainer.ingredients.value = ingredients;
      formContainer.submit();
  })
</script>
